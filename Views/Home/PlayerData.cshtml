@model Newtonsoft.Json.Linq.JObject

<div class="container my-4">
    <div class="card p-4 shadow-sm border-0">
        <h2 class="card-title text-center mb-4"><i class="fas fa-user"></i> Player Data</h2>

        @if (Model?["search_player_all"]?["queryResults"]?["row"] != null)
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var player in Model["search_player_all"]["queryResults"]["row"])
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-primary">@player?["name_display_first_last"]?.ToString() ?? "N/A"</h5>
                                <p class="card-text">
                                    <strong>Position:</strong> @player?["position"]?.ToString() ?? "N/A"<br />
                                    <strong>Team:</strong> @player?["team_name"]?.ToString() ?? "N/A"<br />
                                    <strong>MLB Debut:</strong> @player?["pro_debut_date"]?.ToString() ?? "N/A"
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted">No player data available.</p>
        }
    </div>
</div>