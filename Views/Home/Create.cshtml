@model SportsScoreboard.Models.Score

<div class="container my-4">
    <div class="card p-4 shadow-sm border-0">
        <h2 class="card-title mb-4 text-center"><i class="fas fa-plus-circle"></i> Add New Game</h2>

        <form asp-action="SubmitScore" method="post" class="mb-3">
            <div class="mb-3">
                <label for="homeTeam" class="form-label">Home Team</label>
                <input asp-for="HomeTeam" class="form-control" placeholder="Enter Home Team" required />
            </div>

            <div class="mb-3">
                <label for="homeTeamScore" class="form-label">Home Team Score</label>
                <input asp-for="HomeTeamScore" type="number" class="form-control" min="0" required />
            </div>

            <div class="mb-3">
                <label for="awayTeam" class="form-label">Away Team</label>
                <input asp-for="AwayTeam" class="form-control" placeholder="Enter Away Team" required />
            </div>

            <div class="mb-3">
                <label for="awayTeamScore" class="form-label">Away Team Score</label>
                <input asp-for="AwayTeamScore" type="number" class="form-control" min="0" required />
            </div>

            <div class="mb-3">
                <label for="dateSubmitted" class="form-label">Date</label>
                <input asp-for="DateSubmitted" type="date" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input asp-for="Location" class="form-control" placeholder="Enter Location" required />
            </div>

            <div class="mb-3">
                <label for="gameType" class="form-label">Game Type</label>
                <input asp-for="GameType" class="form-control" placeholder="Enter Game Type" required />
            </div>

            <button type="submit" class="btn btn-success w-100"><i class="fas fa-paper-plane"></i> Submit Game</button>
        </form>
    </div>
</div>